class Enemy:
    # member variables
    enemyLife = 3

    # fuctions 
    def attackEnemy(self):
        print('ouch!')
        self.enemyLife -= 1 # decrement the life 
    
    def checkLife(self):
        if self.enemyLife <= 0:
            print('I am Dead')
        else:
            print('Life Left ' + str(self.enemyLife))

# init the objects for enemy class 
enemy1 = Enemy()

enemy1.attackEnemy()
enemy1.checkLife()

enemy2 = Enemy()
enemy2.attackEnemy()
enemy2.attackEnemy()
enemy2.checkLife()
    
